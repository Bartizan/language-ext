<local:WindowRT x:Class="TestBed.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestBed.WPF"
        mc:Ignorable="d"
        Title="Language-Ext WPF Test-Bed" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>        
        
        <Button Name="CounterButton" Height="100" Width="300" Click="ButtonOnClick" FontSize="25pt" Grid.Row="0"></Button>
        <TextBlock Name="CursorTextBoxX" FontSize="25pt" Grid.Row="1">100</TextBlock>
        <TextBlock Name="CursorTextBoxY" FontSize="25pt" Grid.Row="2">200</TextBlock>
    </Grid>
</local:WindowRT>
